/* Cards */
.card {
  height: 100px;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin-top: 0;
  margin-bottom: 10px;
  /* display: flex;
  justify-content: cspace-between;
  align-items: center */
}
.card-user {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 40px;
  border-radius: 50%;
}
.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
}
.card-description {
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.card-description .name {
  font-size: 24px;
}
.card-description .tag {
  font-size: 14px;
  opacity: 0.7;
  font-weight: lighter;
}
.event-banner {
  display: flex;
  justify-content: center;
  height:30px;
  font-size: 18px;
  opacity: 0.7;
  font-weight: lighter;
}
