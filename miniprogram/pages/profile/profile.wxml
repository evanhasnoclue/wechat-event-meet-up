<view class="weui-cell">
                <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
                    <image src="{{profile.avatarUrl}}" style="width: 50px; height: 50px; display: block"/>
                    <view class="weui-badge" style="position: absolute;top: -.4em;right: -.4em;">6</view>
                </view>
                <view class="weui-cell__bd">
                    <view>我的昵称</view>
                    <view style="font-size: 13px;color: #888888;">摘要信息</view>
                </view>
                <button class="btn" bindtap="onCreate">New Trip</button>
            </view>
<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">选项一的内容</view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}"><view wx:for="{{events}}" wx:for-item="event" wx:key="event.id" bindtap="showRestaurant" class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{event.image}}');" data-restaurant="{{event}}">

  <view class="card-category">
    {{event.address}}
  </view>

  <view class="card-description">

    <view class="name">
      {{event.name}}
    </view>

    <view class="tag">
      {{event.description}}
    </view>

  </view>
</view></view>

            </view>
        </view>
    </view>
</view>
