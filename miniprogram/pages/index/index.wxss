/**index.wxss**/

page {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.wrapper {
  width: 100%;
  background-image: url( "https://tse2.mm.bing.net/th?id=OIP.ANnV6G3oOr9hB_525kFJQAHaLH&o=5&pid=1.7");
  background-size: cover;
  height: 100vh;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.login-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 50vh;
  width: 80%;
  background-color: rgba(255,255,255,0.3);
  border-radius: 20px;
}
.button-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.welcome {
  text-align: center;
  font-size: 50px;
  font-weight: bold;
  color: white;
}


.title {
  text-align: center;
  font-size: 30px;
  font-weight: bold;
  color: white;
}

.button {
  width: 200px;
  height: 50px;
  padding: 2px;
  color: white;
  background-color: #4b0;
  font-weight: bolder;
  text-align: center;
}
