<template name="form">
</template>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>  GO travel together!</h1>
  </div>
</div>


  <form bindsubmit="bindSubmit">
  <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{title}}" style="input-size"placeholder="Title" class="input-height" name="title" maxlength="-1" auto-height />
      </view>
    </view>
      <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{title}}" style="input-size"placeholder="place" class="input-height" name="place" maxlength="-1" auto-height />
      </view>
    </view>
<view class="weui-cells__title">Description</view>
<view class="weui-cells weui-cells_form">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="Detail travel info" rows="3" name='Description'></textarea>
            
        </view>
    </view>
</view>
<view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">time</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name='time' mode="date" value="{{date}}" start="2018-09-01" end="2020-09-01" bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>
            

<view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">deadline</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name='deadline'mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>


 
    <view class="section section_gap">
  <text class="section__title">capacity</text>
  <view class="body-view">
    <slider name='capacity' bindchange="slider3change" show-value/>
  </view>
</view>


    <view class="weui-uploader">
    <view class="weui-uploader__hd">
        <p class="weui-uploader__title">图片上传</p>
        <view class="weui-uploader__info">0/2</view>
    </view>
    <view class="weui-uploader__bd">
        <ul class="weui-uploader__files" id="uploaderFiles">

            <li class="weui-uploader__file weui-uploader__file_status" style="background-image:url(./images/pic_160.png)">
                <view class="weui-uploader__file-content">
                    <i class="weui-icon-warn"></i>
                </view>
            </li>
            <li class="weui-uploader__file weui-uploader__file_status" style="background-image:url(./images/pic_160.png)">
                <view class="weui-uploader__file-content">50%</view>
            </li>
        </ul>
        <view class="weui-uploader__input-box">
            <input id="uploaderInput" class="weui-uploader__input" type="file" accept="image/*" multiple />
        </view>
    </view>
</view>

<button  style="margin-bottom:50px "type="primary" formType="submit" loading="{{loading}}">Submit</button>
  </form>