/* pages/show/show.wxss */
.show-container {
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.event-photo {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-size: cover;
  background-position: center;
  color: white;
  height: 200px;
  width: 100%;
}

.event-info {
  margin: -40px 20px;
  border-radius: 10px;
  background-color: rgba(255,255,255,0.8);
}

.event-intro {
  width: 100%;
  padding: 40px 0 10px 10px;
  border-bottom: 2px solid rgb(240,240,240);
}

.title-owner {
  position: relative;
  width: 100%;
  height: 50px;
}

.event-title {
  padding: 0;
  font-size: 35px;
  position: absolute;
  top: 0px;
  left: 0px;
}

.owner {
  position: absolute;
  right: 20px;
  top: 5px;
}

.event-address {
  padding: 10px 0;
  font-size: 15px;
}

.event-time {
  font-size: 15px;
  padding: 10px 0;
}

.event-ddl {
  font-size: 13px;
  color: rgb(150,150,150);
}

.event-users {
  height: 55px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
}

.event-joiners {
  flex-grow: 1;
  display: flex;
  align-items: center;
  padding: 20px 0;
}

.booking {
  width: 50px;
  text-align: center;
  font-size: 20px;
  border-right: 2px solid rgb(240,240,240);
}

.event-user {
  width: 50px;
  height: 45px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.user-avatar {
  border-radius: 50%;
  width:  40px;
  height: 40px;
  border: 1px solid rgb(240,240,240);
}

.user-name {
  font-size: 10px;
}

.event-description {
  flex-grow: 1;
  height: 100px;
  padding: 20px 0;
  border-bottom: 2px solid rgb(240,240,240);
}

.event-reviews {
  padding: 10px 0;
  margin-top: 30px;
  flex-grow: 1;
  padding-bottom: 50px;
  background-color: white;
}

.review-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
}

.review-rating {
  width: 50px;
}
.review-title {
  flex-grow: 1;
}
.review-user {
  width: 40px;
}

.review-content {
  width: 100%;
  font-size: 15px;
  font-weight: lighter;
}

.review-time {
  width: 100%;
  font-size: 10px;
  color: rgb(100,100,100);
  margin-bottom: 30px;
}

.event-action {
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
  padding: 10px 0;
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.btn {
  width: 20%;
  padding: 1px 2px;
  background-color: #4b0;
  color: white;
  font-weight: bold;
}