.banner {
  color: white;
  text-align: center;
  height: 50px;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.search-bar {
  width: 250px;
  height: 40px;
  border: 1px solid #4b0;
  color: rgb(240,240,240);
  border-radius: 40px;
  position: relative;
}

.search-input {
  position: absolute;
  top: 10px;
  left: 50px;
  width: 200px;
  text-align: left;
}

.search-icon {
  position: absolute;
  top: 5px;
  left: 10px;
  width: 30px;
  height: 30px;
}

.btn{
  background-color: transparent;
  color: #4b0;
  border: 1px solid #4b0;
  border-radius: 20px;
  padding: 0;
  height: 40px;
  width: 200px;
  display:flex;
  justify-content: center;
  align-items: center;
}

.page__bd{
    height: 100%;
