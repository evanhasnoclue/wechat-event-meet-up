/* Cards */
.card {
  height: 100px;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin: 0 8px;
  margin-bottom: 10px;
  border-radius: 5px;
  /* display: flex;
  justify-content: cspace-between;
  align-items: center */
}
.card-user {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 40px;
  border-radius: 50%;
}
.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
}
.card-description {
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.card-description .name {
  font-size: 24px;
}
.card-description .tag {
  font-size: 16px;
  opacity: 0.9;
  font-weight: lighter;
}
.event-banner {
  display: flex;
  justify-content: center;
  height:30px;
  font-size: 18px;
  opacity: 0.7;
  font-weight: lighter;
}
.buttons {
  /* height: 10px;
  width: 20px; */
 
  position: absolute;
  bottom: 40px;
  right: 10px;
   background-color: rgba(0,0,0,0.6);
  font-size: 14px;
  opacity: 0.7;
  font-weight: lighter;
}


.pickers {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 5%
}
.picker-btn {
  margin: 0;
  height: 100%;
  width: 100%;
}
#region{
  width:55%
}
#map {
  width: 45%;
  flex-grow: 1;
}

.card-avatar {
  position: absolute;
  right: 10px;
  bottom: 30px;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  background-size: cover
}


