/* pages/review/review.wxss */
.show-container {
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}

.event-photo {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-size: cover;
  background-position: center;
  color: white;
  height: 200px;
  width: 100%;
}

.event-info {
  margin: -40px 20px;
  border-radius: 10px;
  background-color: rgba(255,255,255,0.8);
}

.review-form {
  margin-top: 40px;
}

.rating {
  background-color: #fff;
  padding-left: 15rpx;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #4b0;
}
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}

.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #4b0;
  margin-bottom: 40px;
}

.input-title {
  color: rgb(50,50,50);
  font-size: 20px;
}


.event-action {
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: rgb(250,250,250);
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
  padding: 10px 0;
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.btn {
  width: 20%;
  padding: 1px 2px;
  background-color: #4b0;
  color: white;
  font-weight: bold;
}
